<?xml version="1.0"?>
<!DOCTYPE fontconfig SYSTEM "fonts.dtd">
<!-- https://jsonformatter.org/xml-formatter -->
<fontconfig>
	<!-- Set default system-ui font -->
	<match target="pattern">
		<test name="family">
			<string>system-ui</string>
		</test>
		<edit name="family" mode="prepend" binding="strong">
			<string>sans-serif</string>
		</edit>
	</match>
	<!-- Workaround silly frontend code with the existence of apple-color-emoji -->
	<match target="pattern">
		<test name="family">
			<string>BlinkMacSystemFont</string>
		</test>
		<edit name="family" mode="prepend" binding="strong">
			<string>sans-serif</string>
		</edit>
	</match>
</fontconfig>
