{
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "auto_install_extension": {
    "git-firefly": true,
    "nix": true
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "restore_on_startup": "none",
  "auto_update": false,
  "buffer_font_family": "monospace",
  "buffer_font_size": 16,
  "scrollbar": {
    "axes": {
      "horizontal": false
    }
  },
  "format_on_save": "off",
  "languages": {
    "Go": {
      "format_on_save": "on"
    },
    "Nix": {
      "language_servers": ["nixd", "!nil"],
      "format_on_save": "on"
    }
  },
  "soft_wrap": "editor_width",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "vim_mode": true,
  "relative_line_numbers": true,
  "agent": {
    "enabled": false
  },
  "ui_font_family": "sans-serif",
  "ui_font_size": 14,
  "experimental.theme_overrides": {
    // "background.appearance": "blurred" // more tweaks needed to make this work
  }
}
