{
  "colorize_brackets": true,
  "language_models": {
    "openai_compatible": {
      "MiniMax": {
        "api_url": "https://api.minimaxi.com/v1",
        "available_models": [
          {
            "name": "MiniMax-M2.5",
            "max_tokens": 200000,
            "max_output_tokens": 32000,
            "max_completion_tokens": 200000,
            "capabilities": {
              "tools": true,
              "images": false,
              "parallel_tool_calls": false,
              "prompt_cache_key": false,
              "chat_completions": true,
            },
          },
        ],
      },
    },
  },
  "double_click_in_multibuffer": "select",
  "vim": {
    "toggle_relative_line_numbers": true,
    "use_system_clipboard": "never",
  },
  "edit_predictions": {
    "copilot": {
      "enable_next_edit_suggestions": false,
    },
    "mode": "eager",
  },
  "agent_servers": {
    "opencode": {
      "type": "registry",
    },
  },
  "window_decorations": "server",
  "auto_install_extensions": {
    "git-firefly": true,
    "html": true,
    "lua": true,
    "nix": true,
    "toml": true,
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 1000,
    },
  },
  "autoscroll_on_clicks": true,
  "buffer_font_family": ".ZedMono",
  "show_signature_help_after_edits": true,
  "auto_update": false,
  "confirm_quit": true,
  "edit_predictions_disabled_in": ["comment", "string"],
  "scrollbar": {
    "axes": {
      "horizontal": false,
    },
  },
  "languages": {
    "Nix": {
      "language_servers": ["!nil", "nixd"],
    },
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy",
          "extraArgs": [
            "--",
            "-W",
            "clippy::pedantic",
            "-W",
            "clippy::nursery",
          ],
        },
        "checkOnSave": false,
        "diagnostics": { "experimental": { "enable": true } },
        "inlayHints": {
          "closingBraceHints": { "minLines": 8 },
          "closureReturnTypeHints": { "enable": "with_block" },
          "discriminantHints": { "enable": "fieldless" },
          "lifetimeElisionHints": { "enable": "skip_trivial" },
        },
        "rustfmt": {
          "extraArgs": ["--unstable-features"],
          "rangeFormatting": { "enable": true },
        },
      },
    },
  },
  "features": {
    "edit_prediction_provider": "copilot",
  },
  "format_on_save": "on",
  "diagnostics": {
    "inline": {
      "enabled": true,
    },
  },
  "inlay_hints": {
    "enabled": true,
  },
  "journal": {
    "hour_format": "hour24",
  },
  "relative_line_numbers": "enabled",
  "restore_on_startup": "empty_tab",
  "use_smartcase_search": true,
  "soft_wrap": "editor_width",
  "wrap_guides": [80, 120],
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
  "terminal": {
    "font_family": "Fira Code",
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark",
  },
  "vim_mode": true,
  "agent": {
    "inline_assistant_model": {
      "provider": "MiniMax",
      "model": "MiniMax-M2.5",
    },
    "enabled": true,
    "default_profile": "ask",
    "default_model": {
      "provider": "MiniMax",
      "model": "MiniMax-M2.5",
    },
  },
  "ui_font_family": ".ZedMono",
}
