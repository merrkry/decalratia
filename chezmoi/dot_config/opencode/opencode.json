{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "build": {
      "permission": {
        "bash": "ask",
        "edit": "allow"
      }
    }
  },
  "autoupdate": false,
  "formatter": false,
  "keybinds": {
    "app_exit": "ctrl+d",
    "editor_open": "ctrl+g",
    "messages_first": "home",
    "messages_last": "end"
  },
  "lsp": false,
  "permission": {
    "bash": "ask",
    "edit": "ask",
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny"
    }
  },
  "share": "disabled",
  "theme": "system"
}
