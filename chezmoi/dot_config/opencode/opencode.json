{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "build": {
      "permission": {
        "bash": {
          "cargo build*": "allow",
          "cargo check*": "allow",
          "cargo clippy*": "allow",
          "cargo fmt*": "allow",
          "cargo test*": "allow",
          "pyrefly check*": "allow",
          "ruff format*": "allow"
        },
        "edit": "allow"
      }
    }
  },
  "autoupdate": false,
  "keybinds": {
    "app_exit": "ctrl+d",
    "editor_open": "ctrl+g",
    "messages_first": "home",
    "messages_last": "end"
  },
  "lsp": false,
  "permission": {
    "bash": {
      "*": "ask",
      "cat": "allow",
      "echo": "allow",
      "find *": "allow",
      "git diff*": "allow",
      "git log*": "allow",
      "git show*": "allow",
      "git status*": "allow",
      "grep *": "allow",
      "head *": "allow",
      "ls *": "allow",
      "rg *": "allow",
      "sort *": "allow",
      "tail *": "allow",
      "wc *": "allow"
    },
    "edit": "ask",
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny"
    }
  },
  "share": "disabled",
  "theme": "system"
}
