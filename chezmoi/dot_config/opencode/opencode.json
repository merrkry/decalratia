{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "build": {
      "permission": {
        "bash": {
          "cargo check*": "allow",
          "cargo clippy*": "allow",
          "cargo fmt*": "allow"
        },
        "edit": "allow"
      }
    }
  },
  "autoupdate": false,
  "keybinds": {
    "app_exit": "ctrl+d",
    "editor_open": "ctrl+g",
    "messages_first": "home",
    "messages_last": "end"
  },
  "lsp": false,
  "permission": {
    "bash": {
      "*": "ask",
      "git diff*": "allow",
      "git log*": "allow",
      "git show*": "allow",
      "git status*": "allow",
      "head *": "allow",
      "ls *": "allow"
    },
    "edit": "ask",
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny"
    }
  },
  "share": "disabled",
  "theme": "system"
}
