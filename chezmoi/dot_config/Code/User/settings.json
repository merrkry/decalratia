{
  "editor.fontFamily": "'Fira Code', 'Maple Mono CN', 'Symbols Nerd Font Mono', monospace",
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "explorer.confirmDelete": false,
  "extensions.autoCheckUpdates": false,
  "extensions.autoUpdate": false,
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "extensions.ignoreRecommendations": true,
  "github.copilot.nextEditSuggestions.enabled": false,
  "nix.enableLanguageServer": true,
  "nix.serverPath": "nixd",
  "nix.serverSettings": {
    "nixd": {
      "formatting": {
        "command": [
          "nixfmt"
        ]
      },
      "nixpkgs": {
        "expr": "import (builtins.getFlake(toString ./.)).inputs.nixpkgs { }"
      }
    }
  },
  "rust-analyzer.check.command": "clippy",
  "rust-analyzer.check.extraArgs": [
    "--",
    "-W",
    "clippy::pedantic",
    "-W",
    "clippy::nursery",
    "-W",
    "clippy::cargo",
  ],
  "rust-analyzer.diagnostics.experimental.enable": true,
  "rust-analyzer.rustfmt.extraArgs": [
    "--unstable-features"
  ],
  "rust-analyzer.rustfmt.rangeFormatting.enable": true,
  "rust-analyzer.server.path": "rust-analyzer",
  "telemetry.telemetryLevel": "off",
  "update.mode": "none",
  "update.showReleaseNotes": false,
  "vscode-neovim.NVIM_APPNAME": "vscode-neovim",
  "window.autoDetectColorScheme": true,
  "window.controlsStyle": "hidden",
  "window.zoomLevel": 1.1,
  "workbench.preferredDarkColorTheme": "Atomize",
  "workbench.secondarySideBar.defaultVisibility": "hidden",
  "workbench.view.showQuietly": {
    "workbench.panel.output": true
  },
  "explorer.confirmDragAndDrop": false,
  "[lua]": {
    "editor.defaultFormatter": "JohnnyMorganz.stylua"
  },
  // "stylua.styluaPath": "stylua",
  "emmylua.ls.executablePath": "emmylua_ls"
}